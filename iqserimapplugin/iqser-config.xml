<IQser>
	<version>1.2.0-SNAPSHOT</version>

	<!-- ServiceLocator -->
	<servicelocator>
		<class>com.iqser.core.engine.PojoServiceLocator</class>
	</servicelocator>

	<!-- CategoryBuilder -->
	<category>
		<class>com.iqser.core.category.DefaultCategoryBuilder</class>
		<!-- Use a Cron formatted string to define the builders schedule. -->
		<scheduler>0 0 23 * * ?</scheduler>
	</category>

	<!-- SecurityManager -->
	<securitymanager>
		<class>
			com.iqser.core.security.basic.BasicSecurityManager
		</class>
	</securitymanager>

	<!-- Analyzer -->
	<analyzer>
		<task>
			<name>SyntaxAnalyzer</name>
			<class>
				com.iqser.core.analyzer.syntax.SyntaxAnalyzerTask
			</class>
		</task>
		<task>
			<name>SemanticAnalyzer</name>
			<class>
				com.iqser.core.analyzer.semantic.SemanticAnalyzerTask
			</class>
		</task>
		<task>
			<name>PatternAnalyzer</name>
			<class>
				com.iqser.core.analyzer.pattern.PatternAnalyzerTask
			</class>
		</task>
	</analyzer>
</IQser>
